# KOI Processor Configuration
# Copy to personal.env and fill in values

# PostgreSQL — the API reads POSTGRES_URL (not individual DB_* vars)
POSTGRES_URL=postgresql://postgres:<your-password>@localhost:5432/octo_koi

# OpenAI (for semantic entity resolution)
OPENAI_API_KEY=sk-...
EMBEDDING_MODEL=text-embedding-3-small

# Vault
VAULT_PATH=/root/.openclaw/workspace/vault

# Mode
MODE=personal

# KOI-net federation
KOI_NET_ENABLED=true
KOI_NODE_NAME=octo-salish-sea
KOI_STATE_DIR=/root/koi-state
KOI_BASE_URL=http://45.132.245.30:8351

# KOI protocol validation policy
# Keep strict mode off until federation peers have signed-envelope compatibility.
KOI_STRICT_MODE=false
KOI_REQUIRE_SIGNED_ENVELOPES=false
KOI_REQUIRE_SIGNED_RESPONSES=false
KOI_ENFORCE_TARGET_MATCH=false
KOI_ENFORCE_SOURCE_KEY_RID_BINDING=false

# LLM Extraction (Gemini)
LLM_BACKEND=gemini
LLM_ENRICHMENT_ENABLED=true
LLM_GEMINI_MODEL=gemini-2.5-flash

# Option A: Vertex AI (recommended — no rate limits)
VERTEX_PROJECT_ID=                # Google Cloud project ID
VERTEX_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=   # Path to service account key JSON

# Option B: API key (free tier — 20 req/day limit)
# GEMINI_API_KEY=                 # From aistudio.google.com

# Quartz site base URL (for entity page links in chat responses)
QUARTZ_BASE_URL=http://45.132.245.30

# Web Source Monitor
WEB_SENSOR_ENABLED=true
WEB_SENSOR_INTERVAL=86400         # Check interval in seconds (default: 24h)
